@* 3. Пример с MudTable (таблица с данными) *@

<MudTable Items="items" Hover="true" SortLabel="Sort by" Filterable="true">
    <HeaderContent>
        <MudTh>Имя</MudTh>
        <MudTh>Возраст</MudTh>
        <MudTh>Город</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Name</MudTd>
        <MudTd>@context.Age</MudTd>
        <MudTd>@context.City</MudTd>
    </RowTemplate>
</MudTable>

@code {
    private List<Person> items = new List<Person>
    {
        new Person { Name = "Иван", Age = 25, City = "Москва" },
        new Person { Name = "Оля", Age = 30, City = "Санкт-Петербург" },
        new Person { Name = "Дмитрий", Age = 28, City = "Новосибирск" }
    };

    public class Person
    {
        public string Name { get; set; }
        public int Age { get; set; }
        public string City { get; set; }
    }
}

@* 4. Пример с MudDialog (модальное окно) *@

<MudButton OnClick="OpenDialog" Color="Color.Secondary">Открыть диалог</MudButton>

<MudDialog @ref="dialog" MaxWidth="MaxWidth.Small">
    <DialogContent>
        <MudText>Это диалоговое окно. Вы хотите продолжить?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog" Color="Color.Primary">Закрыть</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private MudDialog dialog;

    private void OpenDialog()
    {
        // dialog.Show();
        dialog.ShowAsync();
    }

    private void CloseDialog()
    {
        //dialog.Close();
        dialog.CloseAsync();
    }
}

